<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
    
    <display-name>eGov Infrastructure</display-name>
	
	<!-- Context Configuration locations for Spring XML files -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:/applicationContext.xml
            /WEB-INF/applicationContext*.xml
            /WEB-INF/security.xml
        </param-value>
    </context-param>
    
	<filter>
		<filter-name>JSPJNDISession</filter-name>
		<filter-class>
			org.egov.infstr.client.filter.SetThreadLocals
		</filter-class>

	</filter>
	<filter-mapping>
			<filter-name>JSPJNDISession</filter-name>
			<url-pattern>*.do</url-pattern>
		</filter-mapping>
	
		<filter-mapping>
			<filter-name>JSPJNDISession</filter-name>
			<url-pattern>*.jsp</url-pattern>
		</filter-mapping>
	
		<filter-mapping>
			<filter-name>JSPJNDISession</filter-name>
			<url-pattern>/j_security_check</url-pattern>
	</filter-mapping>
	
  	<filter>
		<filter-name>hibernateSession</filter-name>
		<filter-class>org.egov.infstr.client.filter.HibSessionServletFilter</filter-class>
		<init-param>
			<param-name>singleSession</param-name>
			<param-value>true</param-value>
		</init-param>
    	</filter>
    	<filter-mapping>
		<filter-name>hibernateSession</filter-name>
		<url-pattern>*.do</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
      	</filter-mapping>
      	<filter-mapping>
		<filter-name>hibernateSession</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
      	</filter-mapping>
	<filter-mapping>
		<filter-name>hibernateSession</filter-name>
		<url-pattern>/j_security_check</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
   <filter>
        <filter-name>acegi_securityFilter</filter-name>
        <filter-class>org.acegisecurity.util.FilterToBeanProxy</filter-class>
        <init-param>
            <param-name>targetClass</param-name>
            <param-value>org.acegisecurity.util.FilterChainProxy</param-value>
        </init-param>
    </filter>


    <filter-mapping>
        <filter-name>acegi_securityFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping> 
    <filter-mapping>
            <filter-name>acegi_securityFilter</filter-name>
            <url-pattern>*.do</url-pattern>
    </filter-mapping> 
    <filter-mapping>
                <filter-name>acegi_securityFilter</filter-name>
                <url-pattern>/j_security_check</url-pattern>
    </filter-mapping> 
   
   <filter>
   		<filter-name>SetEncodingFilter</filter-name>
   		<filter-class>
   			org.egov.infstr.client.filter.SetEncodingFilter
   		</filter-class>
   	</filter>
   
   	<filter-mapping>
   		<filter-name>SetEncodingFilter</filter-name>
   		<url-pattern>*.do</url-pattern>
   	</filter-mapping>
   	<filter-mapping>
   		<filter-name>SetEncodingFilter</filter-name>
   		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	
	<filter>
	
			<filter-name>security-filter</filter-name>
			<filter-class>
				org.egov.infstr.client.filter.SetSessionVarFilter
			</filter-class>
			<init-param>
				<param-name>egovtest</param-name>
				<param-value>
					((((((((((((((((((((((((((((((((((((((((((( venky here!!
				</param-value>
			</init-param>
			<init-param>
				<param-name>egovtest1</param-name>
				<param-value>venky here!</param-value>
			</init-param>
		</filter>
		<filter-mapping>
			<filter-name>security-filter</filter-name>
			<url-pattern>*.jsp</url-pattern>
		</filter-mapping>
		<filter-mapping>
			<filter-name>security-filter</filter-name>
			<url-pattern>*.do</url-pattern>
		</filter-mapping>
		<!-- for siteMesh put  sitemesh-2.2.1.jar in WEB_INF/lib-->
		<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
		</filter>
		<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
			<filter-name>ResponseOverrideFilter</filter-name>
			<filter-class>
				org.displaytag.filter.ResponseOverrideFilter
			</filter-class>
		</filter>
	
		<filter-mapping>
			<filter-name>ResponseOverrideFilter</filter-name>
			<url-pattern>*.do</url-pattern>
		</filter-mapping>
		<filter-mapping>
			<filter-name>ResponseOverrideFilter</filter-name>
			<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
   
